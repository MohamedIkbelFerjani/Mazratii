   const containertitle(titlee: "اختار نوعية التربة"),
            Container(height: 10),
            Center(
              child: GestureDetector(
                onTap: () {
                  setState(() {
                    _soilChoices = !_soilChoices;
                  });
                },
                child: Container(
                  width: 350,
                  padding: const EdgeInsets.all(15),
                  decoration: BoxDecoration(
                    color: const Color.fromARGB(255, 242, 242, 242),
                    borderRadius: BorderRadius.circular(10),
                    boxShadow: [
                      BoxShadow(
                        color:
                            Colors.grey.withOpacity(0.5), // color of the shadow
                        spreadRadius: 0.5, // spread radius
                        blurRadius: 4, // blur radius
                        offset: Offset(0, 4), // changes position of shadow
                      ),
                    ],
                  ),
                  child: _soilChoices
                      ? Column(
                          crossAxisAlignment: CrossAxisAlignment.end,
                          children: [
                            InkWell(
                              onTap: () {
                                _soiltype = 'التربة الرملية';
                                setState(() {
                                  _soilChoices = !_soilChoices;
                                });
                              },
                              child: Text(
                                'التربة الرملية',
                                textAlign: TextAlign.right,
                                textDirection: TextDirection.rtl,
                                style: TextStyle(
                                  fontSize: 20,
                                  color: Colors.grey,
                                  fontWeight: FontWeight.bold,
                                ),
                              ),
                            ),
                            InkWell(
                              onTap: () {
                                _soiltype = 'التربة الطميية';
                                setState(() {
                                  _soilChoices = !_soilChoices;
                                });
                              },
                              child: Text(
                                'التربة الطميية',
                                textAlign: TextAlign.right,
                                textDirection: TextDirection.rtl,
                                style: TextStyle(
                                  fontSize: 20,
                                  color: Colors.grey,
                                  fontWeight: FontWeight.bold,
                                ),
                              ),
                            ),
                            InkWell(
                              onTap: () {
                                _soiltype = 'التربة الطينية';
                                setState(() {
                                  _soilChoices = !_soilChoices;
                                });
                              },
                              child: Text(
                                'التربة الطينية',
                                textAlign: TextAlign.right,
                                textDirection: TextDirection.rtl,
                                style: TextStyle(
                                  fontSize: 20,
                                  color: Colors.grey,
                                  fontWeight: FontWeight.bold,
                                ),
                              ),
                            ),
                          ],
                        )
                      : Row(
                          mainAxisAlignment: MainAxisAlignment.spaceBetween,
                          children: [
                            const Icon(
                              Icons.arrow_drop_down,
                              size: 36,
                              color: Colors.grey,
                            ),
                            Text(
                              _soiltype,
                              textAlign: TextAlign.right,
                              textDirection: TextDirection.rtl,
                              style: TextStyle(
                                fontSize: 20,
                                color: Colors.grey,
                                fontWeight: FontWeight.bold,
                              ),
                            ),
                          ],
                        ),
                ),
              ),
            ),